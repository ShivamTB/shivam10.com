---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

const posts = await getCollection('writing');
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Writing â€¢ ${SITE_TITLE}`} description="Essays and reflections" />
	</head>
	<body>
		<Header />
		<main class="container py-10 space-y-6">
			<h1 class="text-3xl font-semibold">Writing & Reflections</h1>
			<ul class="space-y-3">
				{posts.map((p) => (
					<li>
						<a href={`/writing/${p.slug}/`} class="block p-4 rounded-lg border border-neutral-900 bg-neutral-950 hover:bg-neutral-900">
							<span class="font-medium">{p.data.title}</span>
						</a>
					</li>
				))}
			</ul>
		</main>
		<Footer />
	</body>
</html>


