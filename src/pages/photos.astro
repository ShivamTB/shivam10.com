---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

const items = await getCollection('photos');
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Photography â€¢ ${SITE_TITLE}`} description="Photo gallery" />
	</head>
	<body>
		<Header />
		<main class="container py-10 space-y-6">
			<h1 class="text-3xl font-semibold">Photography</h1>
			{items.length === 0 ? (
				<p class="text-neutral-500">No photos yet. Coming soon.</p>
			) : (
				<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
					{items.map((p) => (
						<a href={`/photos/${p.slug}/`} class="block rounded-lg overflow-hidden border border-neutral-900 bg-neutral-950">
							<div class="aspect-[4/3] bg-neutral-900"></div>
							<div class="p-3 text-sm">{p.data.title}</div>
						</a>
					))}
				</div>
			)}
		</main>
		<Footer />
	</body>
</html>


