---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import { Image } from "astro:assets";
import heroImg from "../assets/blog-placeholder-1.jpg";
import Wordmark from "../components/Wordmark.astro";
import { getCollection } from "astro:content";

const writing = await getCollection("writing");
const projects = await getCollection("projects");
const photos = await getCollection("photos");
const quotes = await getCollection("quotes");
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to content</a>
    <main id="main" class="container py-20 space-y-16" role="main">
      <section class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="space-y-8">
          <Wordmark size={400} />
          <div class="space-y-6">
            <p class="text-neutral-200 text-xl">
              I'm Shivam, an engineer who writes and photographs. I also
              disappear into new countries, playlists, and games.
            </p>
            <p class="text-neutral-300 text-lg">
              This is where the things I've built, broken, and rebuilt find a
              voice. Notes on loneliness and resilience, stories from airports
              and algorithms, quiet lessons from friendships, and a restless
              pursuit of meaning in motion.
            </p>
            <p class="text-neutral-300 text-lg">
              Here you'll find fragments of life: some written, some captured,
              some still figuring themselves out.
            </p>
          </div>
        </div>

        <!-- Icons -->
        <div class="flex justify-center lg:justify-end gap-8">
          <!-- Camera icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="w-16 h-16 text-blue-400"
            fill="currentColor"
          >
            <path
              d="M19,6.5H17.72l-.32-1a3,3,0,0,0-2.84-2H9.44A3,3,0,0,0,6.6,5.55l-.32,1H5a3,3,0,0,0-3,3v8a3,3,0,0,0,3,3H19a3,3,0,0,0,3-3v-8A3,3,0,0,0,19,6.5Zm1,11a1,1,0,0,1-1,1H5a1,1,0,0,1-1-1v-8a1,1,0,0,1,1-1H7a1,1,0,0,0,1-.68l.54-1.64a1,1,0,0,1,.95-.68h5.12a1,1,0,0,1,.95.68l.54,1.64A1,1,0,0,0,17,8.5h2a1,1,0,0,1,1,1Zm-8-9a4,4,0,1,0,4,4A4,4,0,0,0,12,8.5Zm0,6a2,2,0,1,1,2-2A2,2,0,0,1,12,14.5Z"
            ></path>
          </svg>

          <!-- Code icon -->
          <svg
            viewBox="0 0 40 24"
            class="w-16 h-10 text-blue-400"
            fill="currentColor"
            xmlns="http://www.w3.org/2000/svg"
          >
            <!-- Left angle bracket < -->
            <path
              d="M8 2 L2 12 L8 22"
              stroke="currentColor"
              stroke-width="4"
              stroke-linecap="round"
              stroke-linejoin="round"
              fill="none"></path>
            <!-- Forward slash / -->
            <path
              d="M24 2 L16 22"
              stroke="currentColor"
              stroke-width="4"
              stroke-linecap="round"
              fill="none"></path>
            <!-- Right angle bracket > -->
            <path
              d="M32 2 L38 12 L32 22"
              stroke="currentColor"
              stroke-width="4"
              stroke-linecap="round"
              stroke-linejoin="round"
              fill="none"></path>
          </svg>

          <!-- Game controller icon -->
          <svg
            viewBox="0 0 20 20"
            class="w-16 h-16 text-blue-400"
            fill="currentColor"
            xmlns="http://www.w3.org/2000/svg"
          >
            <g transform="translate(-140, -4719)">
              <g transform="translate(56, 160)">
                <path
                  d="M86,4577 L102,4577 L102,4569 L86,4569 L86,4577 Z M104,4567 L104,4569 L104,4577 L104,4579 L102,4579 L86,4579 L84,4579 L84,4577 L84,4569 L84,4567 L86,4567 L93,4567 L93,4563 L93,4561 L98,4561 L98,4559 L100,4559 L100,4561 L100,4563 L95,4563 L95,4567 L102,4567 L104,4567 Z M98,4574 L100,4574 L100,4572 L98,4572 L98,4574 Z M95,4574 C95.552,4574 96,4573.552 96,4573 C96,4572.448 95.552,4572 95,4572 C94.448,4572 94
				</div>
			</section>
		
		<!-- Sections below -->
		<div class="
                  container
                  py-16
                  space-y-16"
                >
                  <section id="writing" class="space-y-4">
                    <h2>Writing & Reflections</h2>
                    <ul class="space-y-2">
                      {
                        writing.slice(0, 4).map((p) => (
                          <li>
                            <a
                              href={`/writing/${p.id}/`}
                              class="group inline-flex items-baseline gap-2 no-underline"
                            >
                              <span class="group-hover:underline decoration-blue-500/30 underline-offset-4">
                                {p.data.title}
                              </span>
                              <span class="text-xs text-neutral-500">â†’</span>
                            </a>
                          </li>
                        ))
                      }
                    </ul>
                  </section>

                  <section id="projects" class="space-y-4">
                    <h2>Projects</h2>
                    <ul class="space-y-2">
                      {
                        projects.slice(0, 4).map((p) => (
                          <li class="flex items-center justify-between rounded-lg border border-neutral-800 bg-neutral-900 p-3">
                            <span class="font-medium">{p.data.title}</span>
                            <span class="text-xs uppercase text-neutral-500">
                              {p.data.status}
                            </span>
                          </li>
                        ))
                      }
                    </ul>
                  </section>

                  <section id="photos" class="space-y-4">
                    <h2>Photos</h2>
                    <div
                      class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-3"
                    >
                      {
                        photos.slice(0, 6).map((p) => (
                          <a
                            href={`/photos/${p.id}/`}
                            class="block rounded-xl overflow-hidden border border-neutral-800 bg-neutral-900"
                          >
                            <div class="aspect-[4/3] bg-neutral-800" />
                          </a>
                        ))
                      }
                    </div>
                  </section>

                  <section id="quotes" class="space-y-4">
                    <h2>Quotes</h2>
                    <ul class="space-y-2">
                      {
                        quotes.slice(0, 4).map((q) => (
                          <li class="p-3 rounded-lg border border-neutral-800 bg-neutral-900">
                            <blockquote class="m-0">{q.data.text}</blockquote>
                          </li>
                        ))
                      }
                    </ul>
                  </section>
                </path>
                <Footer />
              </g>
            </g>
          </svg>
        </div>
      </section>
    </main></body>
</html>
